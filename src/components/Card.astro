---
interface CardProps {
  image: string;
  title: string;
  price: string;
  description: string;
}

const { image, title, price, description } = Astro.props as CardProps;
---

<div class="relative bg-white rounded-lg shadow-lg overflow-hidden">
  <!-- Sticker para el precio -->
  <div
    class="absolute top-4 left-4 bg-red-600 text-white px-4 py-2 text-4xl font-bold rounded-full shadow-lg"
  >
    {price}
  </div>
  <!-- Imagen de la tarjeta -->
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h2 class="text-xl font-semibold">{title}</h2>
    <p class="text-sm text-gray-700">{description}</p>
  </div>
</div>
